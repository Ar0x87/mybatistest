<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.null01.mappers.HotelMapper">
    <resultMap id="HotelResultMap" type="com.null01.models.Hotel">
        <id column="id" property="id"/>
        <result column="hotelname" property="hotelname"/>
        <result column="address" property="address"/>
    </resultMap>

    <select id="getAll" resultMap="HotelResultMap">
        SELECT id, hotelname, address FROM hotel
    </select>

    <select id="getHotelMapByName" resultMap="HotelResultMap" parameterType="java.lang.String">
        SELECT id, hotelname, address FROM hotel
        WHERE hotelname = #{name};
    </select>

    <select id="getByName" resultMap="HotelResultMap" parameterType="java.lang.String">
        SELECT id, hotelname, address FROM hotel
        WHERE lower(hotelname) LIKE lower(concat('%', #{name}, '%'));
    </select>

    <select id="poster" resultType="java.lang.Integer" parameterType="java.util.Map">
        SELECT setval('hotel_id_seq', (SELECT max(id) FROM hotel));
        INSERT INTO hotel(id, hotelname, address) VALUES (nextval('hotel_id_seq'), #{hotelname} , #{address} );
    </select>

    <select id="postJ" resultType="java.lang.Integer" parameterType="java.util.Map">
    </select>

    <select id="puter" resultType="java.lang.Integer" parameterType="java.util.Map">
        UPDATE hotel SET hotelname = #{hotelname}, address = #{address} WHERE id = CAST(#{id} AS INTEGER );
    </select>

    <select id="checkIdExistance" resultType="java.lang.Integer" parameterType="java.lang.Integer">
        SELECT id FROM hotel WHERE id = #{cie}
    </select>

    <select id="putJ" resultType="java.lang.Integer" parameterType="java.util.Map">
    </select>

    <select id="delter" resultType="java.lang.Integer" parameterType="java.lang.Integer">
        DELETE FROM hotel WHERE id = #{x}
    </select>

    <select id="getHotelnameById" resultType="java.lang.String" parameterType="java.lang.Integer">
        SELECT hotelname FROM hotel WHERE id = #{id};
    </select>

    <select id="getAddressById" resultType="java.lang.String" parameterType="java.lang.Integer">
        SELECT address FROM hotel WHERE id = #{id};
    </select>

</mapper>